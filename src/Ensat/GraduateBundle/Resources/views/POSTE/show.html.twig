{% extends '::base.html.twig' %}

{% block body -%}
    <h1>POSTE</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Intutile</th>
                <td>{{ entity.intutile }}</td>
            </tr>
